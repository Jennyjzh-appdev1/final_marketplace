<!-- Form item start -->
<form action="/create_item" method="post" enctype="multipart/form-data">
<!-- Form item end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @item.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @item.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for seller_id start -->
  <div class="form-group">
    <label for="seller_id">
      Seller
    </label>

    <!-- Input for seller_id start -->
    <input type="text" id="seller_id" name="seller_id" class="form-control" value="<%= @item.seller_id %>">
    <!-- Input for seller_id end -->
  </div>
  <!-- Label and input for seller_id end -->

  <!-- Label and input for price start -->
  <div class="form-group">
    <label for="price">
      Price
    </label>

    <!-- Input for price start -->
    <input type="text" id="price" name="price" class="form-control" value="<%= @item.price %>">
    <!-- Input for price end -->
  </div>
  <!-- Label and input for price end -->

  <!-- Label and input for address start -->
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <!-- Input for address start -->
    <input type="text" id="address" name="address" class="form-control" value="<%= @item.address %>">
    <!-- Input for address end -->
  </div>
  <!-- Label and input for address end -->

  <!-- Label and input for photo start -->
  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <!-- Input for photo start -->
    <input type="file" id="photo" name="photo" class="form-control">
    <!-- Input for photo end -->
  </div>
  <!-- Label and input for photo end -->

  <!-- Label and input for location_id start -->
  <!-- Input for location_id start -->
  <input type="hidden" name="location_id" value="<%= @location.id %>">
  <!-- Input for location_id end -->

  <!-- Label and input for status_id start -->
  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <!-- Input for status_id start -->
    <input type="text" id="status_id" name="status_id" class="form-control" value="<%= @item.status_id %>">
    <!-- Input for status_id end -->
  </div>
  <!-- Label and input for status_id end -->

  <!-- Label and input for item_type_id start -->
  <div class="form-group">
    <label for="item_type_id">
      Item type
    </label>

    <!-- Input for item_type_id start -->
    <input type="text" id="item_type_id" name="item_type_id" class="form-control" value="<%= @item.item_type_id %>">
    <!-- Input for item_type_id end -->
  </div>
  <!-- Label and input for item_type_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create item
  </button>
</form>
