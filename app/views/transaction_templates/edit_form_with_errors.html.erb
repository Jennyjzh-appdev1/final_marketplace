<!-- Validation failure messages -->
<% if @transaction.errors.any? %>
  <% @transaction.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit transaction #<%= @transaction.id %>
</h1>

<hr>

<!-- Form transaction start -->
<form action="/update_transaction/<%= @transaction.id %>" method="post">
<!-- Form transaction end -->

  <!-- Label and input for buyer_id start -->
  <div class="form-group">
    <label for="buyer_id">
      Buyer
    </label>

    <!-- Input for buyer_id start -->
    <input type="text" id="buyer_id" name="buyer_id" class="form-control" value="<%= @transaction.buyer_id %>">
    <!-- Input for buyer_id end -->
  </div>
  <!-- Label and input for buyer_id end -->

  <!-- Label and input for seller_id start -->
  <div class="form-group">
    <label for="seller_id">
      Seller
    </label>

    <!-- Input for seller_id start -->
    <input type="text" id="seller_id" name="seller_id" class="form-control" value="<%= @transaction.seller_id %>">
    <!-- Input for seller_id end -->
  </div>
  <!-- Label and input for seller_id end -->

  <!-- Label and input for item_id start -->
  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <!-- Input for item_id start -->
    <input type="text" id="item_id" name="item_id" class="form-control" value="<%= @transaction.item_id %>">
    <!-- Input for item_id end -->
  </div>
  <!-- Label and input for item_id end -->

  <!-- Label and input for sale_price start -->
  <div class="form-group">
    <label for="sale_price">
      Sale price
    </label>

    <!-- Input for sale_price start -->
    <input type="text" id="sale_price" name="sale_price" class="form-control" value="<%= @transaction.sale_price %>">
    <!-- Input for sale_price end -->
  </div>
  <!-- Label and input for sale_price end -->

  <!-- Label and input for notes start -->
  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <!-- Input for notes start -->
    <input type="text" id="notes" name="notes" class="form-control" value="<%= @transaction.notes %>">
    <!-- Input for notes end -->
  </div>
  <!-- Label and input for notes end -->

  <button class="btn btn-block btn-outline-secondary">
    Update transaction
  </button>
</form>

<hr>

<a href="/transactions">
  Go back
</a>
