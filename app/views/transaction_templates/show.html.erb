<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Transaction #<%= @transaction.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/transactions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/transactions/<%= @transaction.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit transaction
        </a>
      </div>

      <div class="col">
        <a href="/delete_transaction/<%= @transaction.id %>" class="btn btn-block btn-outline-secondary">
          Delete transaction
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Buyer
      </dt>
      <dd>
        <% if @transaction.buyer.present? %>
          <a href="/users/<%= @transaction.buyer_id %>">
            <%= @transaction.buyer.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Seller
      </dt>
      <dd>
        <% if @transaction.seller.present? %>
          <a href="/users/<%= @transaction.seller_id %>">
            <%= @transaction.seller.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Item
      </dt>
      <dd>
        <% if @transaction.item.present? %>
          <a href="/items/<%= @transaction.item_id %>">
            <%= @transaction.item.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Sale price
      </dt>
      <dd>
        <%= @transaction.sale_price %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @transaction.notes %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@transaction.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@transaction.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

