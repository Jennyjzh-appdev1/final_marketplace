<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All transactions
    </h1>

    <a href="/transactions/new" class="btn btn-block btn-outline-secondary">
      Add a new transaction
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "transaction_templates/transactions_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Buyer
        </th>

        <th>
          Seller
        </th>

        <th>
          Item
        </th>

        <th>
          Sale price
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <!-- Display transaction.id start -->
        <td>
          <%= transaction.id %>
        </td>
        <!-- Display transaction.id end -->

        <!-- Display transaction.buyer_id start -->
        <td>
          <% if transaction.buyer.present? %>
            <a href="/users/<%= transaction.buyer.id %>">
              <%= transaction.buyer.email %>
            </a>
          <% end %>
        </td>
        <!-- Display transaction.buyer_id end -->

        <!-- Display transaction.seller_id start -->
        <td>
          <% if transaction.seller.present? %>
            <a href="/users/<%= transaction.seller.id %>">
              <%= transaction.seller.email %>
            </a>
          <% end %>
        </td>
        <!-- Display transaction.seller_id end -->

        <!-- Display transaction.item_id start -->
        <td>
          <% if transaction.item.present? %>
            <a href="/items/<%= transaction.item.id %>">
              <%= transaction.item.title %>
            </a>
          <% end %>
        </td>
        <!-- Display transaction.item_id end -->

        <!-- Display transaction.sale_price start -->
        <td>
          <%= transaction.sale_price %>
        </td>
        <!-- Display transaction.sale_price end -->

        <!-- Display transaction.notes start -->
        <td>
          <%= transaction.notes %>
        </td>
        <!-- Display transaction.notes end -->

        <!-- Display transaction.created_at start -->
        <td>
          <%= time_ago_in_words(transaction.created_at) %> ago
        </td>
        <!-- Display transaction.created_at end -->

        <!-- Display transaction.updated_at start -->
        <td>
          <%= time_ago_in_words(transaction.updated_at) %> ago
        </td>
        <!-- Display transaction.updated_at end -->

        <td>
          <a href="/transactions/<%= transaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @transactions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
