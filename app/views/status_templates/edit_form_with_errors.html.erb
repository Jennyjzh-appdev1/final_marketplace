<!-- Validation failure messages -->
<% if @status.errors.any? %>
  <% @status.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit status #<%= @status.id %>
</h1>

<hr>

<!-- Form status start -->
<form action="/update_status/<%= @status.id %>" method="post">
<!-- Form status end -->

  <button class="btn btn-block btn-outline-secondary">
    Update status
  </button>
</form>

<hr>

<a href="/statuses">
  Go back
</a>
