<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Items

    <a data-toggle="collapse" href="#status_items_new_form">
      Add item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @status.items.each do |item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/items/<%= item.id %>">
          <%= item.title %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_item_from_status/<%= item.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="status_items_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "status_templates/status_items_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
