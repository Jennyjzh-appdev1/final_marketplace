<!-- Validation failure messages -->
<% if @status.present? %>
  <% if @status.errors.any? %>
    <% @status.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new status
</h1>


<hr>

<!-- Form status start -->
<form action="/create_status" method="post">
<!-- Form status end -->

  <button class="btn btn-block btn-outline-secondary">
    Create status
  </button>
</form>

<hr>

<a href="/statuses">
  Go back
</a>
