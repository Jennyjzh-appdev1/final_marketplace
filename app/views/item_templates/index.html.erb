<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All items
    </h1>

    <a href="/items/new" class="btn btn-block btn-outline-secondary">
      Add a new item
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Seller
        </th>

        <th>
          Price
        </th>

        <th>
          Address
        </th>

        <th>
          Photo
        </th>

        <th>
          Location
        </th>

        <th>
          Status
        </th>

        <th>
          Item type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <!-- Display item.id start -->
        <td>
          <%= item.id %>
        </td>
        <!-- Display item.id end -->

        <!-- Display item.title start -->
        <td>
          <%= item.title %>
        </td>
        <!-- Display item.title end -->

        <!-- Display item.description start -->
        <td>
          <%= item.description %>
        </td>
        <!-- Display item.description end -->

        <!-- Display item.seller_id start -->
        <td>
          <%= item.seller_id %>
        </td>
        <!-- Display item.seller_id end -->

        <!-- Display item.price start -->
        <td>
          <%= item.price %>
        </td>
        <!-- Display item.price end -->

        <!-- Display item.address start -->
        <td>
          <%= item.address %>
        </td>
        <!-- Display item.address end -->

        <!-- Display item.photo start -->
        <td>
          <%= item.photo %>
        </td>
        <!-- Display item.photo end -->

        <!-- Display item.location_id start -->
        <td>
          <%= item.location_id %>
        </td>
        <!-- Display item.location_id end -->

        <!-- Display item.status_id start -->
        <td>
          <%= item.status_id %>
        </td>
        <!-- Display item.status_id end -->

        <!-- Display item.item_type_id start -->
        <td>
          <%= item.item_type_id %>
        </td>
        <!-- Display item.item_type_id end -->

        <!-- Display item.created_at start -->
        <td>
          <%= time_ago_in_words(item.created_at) %> ago
        </td>
        <!-- Display item.created_at end -->

        <!-- Display item.updated_at start -->
        <td>
          <%= time_ago_in_words(item.updated_at) %> ago
        </td>
        <!-- Display item.updated_at end -->

        <td>
          <a href="/items/<%= item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
