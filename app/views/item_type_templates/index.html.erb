<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All item types
    </h1>

    <a href="/item_types/new" class="btn btn-block btn-outline-secondary">
      Add a new item type
    </a>
  </div>
</div>

<!-- Ransack Code start -->

