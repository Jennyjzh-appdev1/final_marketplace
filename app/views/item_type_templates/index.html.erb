<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @item_types.each do |item_type| %>
      <tr>
        <!-- Display item_type.id start -->
        <td>
          <%= item_type.id %>
        </td>
        <!-- Display item_type.id end -->

        <!-- Display item_type.created_at start -->
        <td>
          <%= time_ago_in_words(item_type.created_at) %> ago
        </td>
        <!-- Display item_type.created_at end -->

        <!-- Display item_type.updated_at start -->
        <td>
          <%= time_ago_in_words(item_type.updated_at) %> ago
        </td>
        <!-- Display item_type.updated_at end -->

        <td>
          <a href="/item_types/<%= item_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @item_types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
