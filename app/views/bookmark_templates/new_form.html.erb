<h1>
  Add a new bookmark
</h1>


<hr>

<form action="/create_bookmark" method="post">

  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :title, @bookmark.item_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @bookmark.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>

<hr>

<a href="/bookmarks">
  Go back
</a>
